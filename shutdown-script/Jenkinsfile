pipeline {
  agent none
  stages {
    stage('clone git repo to cutom location') {
      agent {
        label 'built-in'
      }
      steps {
        dir('/mnt/shutdownfile') {
          sh 'rm -rf *'
          checkout scm
        }
      }
    }
    stage('shutdown system on dev') {
      agent {
        label 'dev'
      }
    steps {
      sh 'docker kill tomcat10'
      sh 'docker system prune -a -f'
    }
    }
    stage('shutdown system on qa') {
      agent {
        label 'qa'
      }
    steps {
      sh 'docker kill tomcat10'
      sh 'docker system prune -a -f'
    }
    }
  }
}
